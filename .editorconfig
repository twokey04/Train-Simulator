# http://EditorConfig.org

# top-most EditorConfig file
root = true

# Apply to all code files
[*]
# Set default charset
charset = utf-8
trim_trailing_whitespace = false
# A newline ending every file
insert_final_newline = true
indent_style = space
indent_size = 4

[{CMakeLists.*,*.cmake}]
indent_style = tab
indent_size = 4

[Makefile]
indent_style = tab

[*.{bat,cmd,cmd.*}]
end_of_line = crlf
indent_style = space
indent_size = 4

[*.{md,markdown}]
indent_size = 4
trim_trailing_whitespace = false